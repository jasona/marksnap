<Window x:Class="MarkSnap.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Height="280"
        Width="400"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="{DynamicResource WindowBackgroundBrush}">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="32"
                      GlassFrameThickness="0"
                      ResizeBorderThickness="0"
                      CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" Background="{DynamicResource TitleBarBackgroundBrush}">
                <Grid>
                    <TextBlock Text="Settings" FontSize="12" Margin="10,0,0,0"
                               Foreground="{DynamicResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                    <Button Content="&#xE8BB;" HorizontalAlignment="Right"
                            Style="{StaticResource CloseButtonStyle}"
                            Click="CloseButton_Click"/>
                </Grid>
            </Border>

            <!-- Content -->
            <StackPanel Grid.Row="1" Margin="20">
                <TextBlock Text="Appearance" FontSize="16" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextHeadingBrush}" Margin="0,0,0,15"/>

                <TextBlock Text="Theme" FontSize="13"
                           Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,10"/>

                <RadioButton x:Name="SystemThemeRadio" Content="Follow system setting"
                             GroupName="Theme" Margin="0,0,0,8"
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             Checked="ThemeRadio_Checked"/>
                <RadioButton x:Name="LightThemeRadio" Content="Light"
                             GroupName="Theme" Margin="0,0,0,8"
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             Checked="ThemeRadio_Checked"/>
                <RadioButton x:Name="DarkThemeRadio" Content="Dark"
                             GroupName="Theme" Margin="0,0,0,8"
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             Checked="ThemeRadio_Checked"/>
            </StackPanel>

            <!-- Buttons -->
            <Border Grid.Row="2" Background="{DynamicResource ToolbarBackgroundBrush}" Padding="15,12">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Cancel" Width="80" Margin="0,0,10,0"
                            Style="{StaticResource ToolbarButtonStyle}"
                            Click="CancelButton_Click"/>
                    <Button Content="Save" Width="80"
                            Style="{StaticResource ToolbarButtonStyle}"
                            Click="SaveButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
